
<!-- pretend there is stuff here thats like importaint and such-->

<body>
   <!-- % SideBar % -->
  <div class="sidebar" id="sidebar" >
      <% @problems.each do |a| %>
    <%= link_to(a.title, "#p#{a.title}", class:"sidebar-element")%>
      <% end %>        
  </div>
  <div id="content">

    <!--Listing problems -->
      <% @problems.each do |problem| %>
        <div id="p<%= problem.title %>" class="problem-base">
          <div class="title"> <span class="points">9042 points</span>
                              <span align="center" class="name"><%= problem.title %></span>
                              <span class="time">Submitted 10/24/14 at 10:23:42 AM</span>
            </div>

        <div class="instructions"> 
          <div class="explanation"> Explanation: <%= problem.explanation %> </div>
            <div class="exInOut"> 
              <a class="exInOutSpaceing exIn"> Exin: </br><%= problem.exIn %> </a>
              <a class="exInOutSpaceing exOut">Exout:</br><%= problem.exOut %></a>
            </div>
       </div>
          <div class="status"> Status: 
            <%= render partial: "question_list.html.erb", locals:{problem: problem}%>
            <div id="result_<%= problem.id %>" class="submission"> No submission.</div>
          </div>
          <div>
            <%= link_to 'Show', problem %> | <%= link_to 'Edit', edit_problem_path(problem) %> | 
            <%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      <% end %>
    <br>
    
  </div>
</body>
