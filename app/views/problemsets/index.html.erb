<!--
  Problemsets index
  seems functionally complete
-->
  <%if @problemsets%>
  
  <div id="ps-list">
    <% problemset_ct = 1 %>
    <% @problemsets.each do |problemset| %> 
      <span class="ps-info">
      <div class="ps-title">
        <%= link_to problemset.title, problemset, class:"ps-title-text"%><%if admin? %><%= link_to 'Edit', edit_problemset_path(problemset), class:"ps-title-edit" %><%end%>
      </div>
      <div class="ps-explanation">
        <span><%= raw problemset.explanation.gsub(/\n/, '<br>')%></span><span class="glyphicon glyphicon-plus pull-right" aria-hidden="true"></span>
      </div>
      <div class="ps-problems-list">
        <% list_ct = 1%>
        <% problemset.problems.each do |problem| %>
        <span class="ps-list-element">
            <%= link_to problem.title, "#{problemset_path(problemset)}/#p#{problem.id}", title: problem.explanation, rel: 'tooltip'%>
        </span>
        <%= raw "<br>" if list_ct % 2 == 0 %>
        <% list_ct += 1 %>
        <%end%>
    </div>
    </span>
    <%= raw "<br>" if problemset_ct % 2 == 0 %> 
    <%end%>

  </div>
  <%else%>
  <!--User has no problemsets-->
  <h1>You have not been added to any problem sets<%unless current_user%> and are not logged in<%end%></h1>
    <h3>
    <%unless current_user%> 
      Please log in.
    <%else%><!--user exists-->
      <%if current_user.groups.empty?%> 
        Please request to be added to a group
        [button to place request to be added to group?]
      <%else%><!--group for user exists-->
        You belong to <%=pluralize(current_user.groups.count, "group") %><br>
        <% current_user.groups.each do |group| %>
          <%=group.title%> -- Pease contact <%= group.teacher%> and notify them that they have no content
          [button to email teacher]
        <%end%>
      <%end%>
   <%end%>
  </h3>
  </div>
  <%end%>
  