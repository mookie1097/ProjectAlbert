<!--
  Problemsets index
  seems functionally complete
-->


<div style="padding-top:20px;">
  <%if @problemsets%>
  <div id="accordion-collapse">
    <% @problemsets.each do |problemset| %> 
      <h1><%= link_to problemset.title, problemset %><%if admin? %><%= link_to 'Edit', edit_problemset_path(problemset) %><%end%></h1> 
      <div class="problem-list-body">
        <p>
        <h3 style="padding-left:5px;"><%=problemset.explanation%></h3>
        <% problemset.problems.each do |problem| %>
          <h4 style="padding-left:10px;">
            <%= link_to problem.title, problem, title: problem.explanation, rel: 'tooltip'%>
                                  <%if admin? %><%= link_to '  Edit', edit_problem_path(problem) %><%end%></h4>
        <%end%>
        </p>
      </div>
    <%end%>
  
  </div>
  <%else%>
  <!--User has no problemsets-->
  <h1>You have not been added to any problem sets<%unless current_user%> and are not logged in<%end%></h1>
    <h3>
    <%unless current_user%> 
      Please log in.
    <%else%><!--user exists-->
      <%if current_user.groups.empty?%> 
        Please request to be added to a group
        [button to place request to be added to group?]
      <%else%><!--group for user exists-->
        You belong to <%=pluralize(current_user.groups.count, "group") %><br>
        <% current_user.groups.each do |group| %>
          <%=group.title%> -- Pease contact <%= group.teacher%> and notify them that they have no content
          [button to email teacher]
        <%end%>
      <%end%>
   <%end%>
  </h3>
  
  <%end%>
</div>